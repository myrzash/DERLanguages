        <activity
            android:name="erc.nis.languages.ActivityIcons"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="erc.nis.languages.ActivityDetail"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="erc.nis.languages.SettingsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/ThemeSettings" >
        </activity>
        <activity
            android:name="erc.nis.languages.ActivityCredits"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
