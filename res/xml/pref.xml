<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:key="ctglangs" >
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/langs_interface"
            android:entryValues="@array/langs_interface_alias"
            android:key="interface" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/Languages"
            android:entryValues="@array/LanguageAlias"
            android:key="lang1" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/Languages"
            android:entryValues="@array/LanguageAlias"
            android:key="lang2" />
    </PreferenceCategory>
    <PreferenceCategory android:key="ctgextra" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="sound"
            android:switchTextOff=""
            android:switchTextOn="" />
    </PreferenceCategory>
    <PreferenceCategory android:key="ctginfo" >
        <PreferenceScreen android:key="cred" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="erc.nis.languages.ActivityCredits"
                android:targetPackage="erc.nis.languages" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>