<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_cover_card" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/padding_high"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewCoverItem"
            android:layout_width="@dimen/size_cover_item"
             android:layout_height="@dimen/size_cover_item"
            android:background="@drawable/m1"
            android:onClick="onClickItem"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_normal_extra" />

        <TextView
            android:id="@+id/textViewAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="@dimen/padding_small"
            android:text="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewIconAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_high_extra"
        android:src="@drawable/c1" />

</FrameLayout>